<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_custom_2x1_document">
        <div class="page" style="margin: 0; padding: 0; width: 100%; height: 100%; overflow: hidden; box-sizing: border-box; font-family: sans-serif; background-color: white;">
            
            <t t-set="so_name" t-value="o.sale_id.name if o.sale_id else o.origin"/> 

            <div style="text-align: center; border-bottom: 1px solid black; margin-bottom: 2px; padding-bottom: 1px; padding-top: 2px;">
                <span style="font-size: 10px; line-height: 1;">Orden de Venta</span><br/>
                <strong style="font-size: 16px; line-height: 1;" t-esc="so_name"/>
            </div>

            <div style="font-size: 11px; margin-bottom: 2px; text-align: center; line-height: 1;">
                <strong>Traslado:</strong> <span t-field="o.name"/>
            </div>

            <div style="text-align: center;">
                <img t-att-src="'/report/barcode/?barcode_type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.name, 300, 50)" 
                     style="width: 90%; max-height: 25px;" alt="CÃ³digo de Barras"/>
            </div>

        </div>
    </template>

    <template id="report_custom_2x1">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="wb_printer_IoT.report_custom_2x1_document"/>
            </t>
        </t>
    </template>
</odoo>